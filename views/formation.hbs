<div id='soccerField'></div>
<div class="background-color" id="accordion-padding"></div>
<div class="accordion">
	<div class="col-6">
		<div class="accordion-header">Team 1<hr></div>
		<div class="accordion-content bottom-border">
			<table>
				<tr>
					<th class="th-dark">Team</th>
					<th class="th-dark">Player</th>
					<th class="th-dark">Remove Player</th>
				</tr>
				{{#each team1}}
					<tr data-player-id="{{this.id}}" contentEditable="true">
						<td data-team="{{this.team}}">{{this.team}}</td>
						<td data-player="{{this.player}}">{{this.player}}</td>
						<td contentEditable="false" class="center"><button id='js-remove-player'>Delete</button></td>
					<tr>
				{{/each}}
			</table>
		</div>
	</div>
	<div class="col-6">
		<div class="accordion-header">Team 2 <hr></div>
		<div class="accordion-content bottom-border">
			<table>
				<tr>
					<th class="th-dark">Team</th>
					<th class="th-dark">Player</th>
					<th class="th-dark">Remove Player</th>
				</tr>
				{{#each team2}}
					<tr data-player-id="{{this.id}}" contentEditable="true">
						<td data-team="{{this.team}}">{{this.team}}</td>
						<td data-player="{{this.player}}">{{this.player}}</td>
						<td contentEditable="false" class="center"><button id='js-remove-player'>Delete</button></td>
					<tr>
				{{/each}}
			</table>
		</div>
	</div>
</div>
<div class="background-color form-btn-padding center" id="formation-btn-padding">
	<button class='js-save-btn save'>Save</button>
	<button class='js-cancel-btn'><a href="/profile">Cancel</a></button>
</div>
