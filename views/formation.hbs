<div class="background-color" id="comment-section">
	<h4>Comments:</h4>
	{{!-- setup communication between client and server side --}}
	<form action="/submitComment" method="post">
		<input type="text" name="userFeedback" placeholder="Provide feedback" id="userFeedback" class="center">
		<br>
		<input type="submit" name="submitBtn" class="center form-btn-padding">
	</form>
	<ul id="comments-provided">
		{{#each comments}}
			<li>{{this.feedback}}</li>
		{{/each}}
	</ul>

</div>
