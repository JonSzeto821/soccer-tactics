	{{/if}}
	{{!--<div>
		{{cat}}
		{{!--formation.dots--}}
	</div>
	{{!-- {{create buttons for cancel save add player fork}} --}}
	<div class="container center">
		<div class="form-btn-padding">
			<button id='js-fork-btn' class="fork">Fork</button>
			{{!-- <button class='js-edit-btn'>Edit</button> --}}
			<button class='js-delete-btn delete'><a href="/">Delete</a></button>
		</div>
		<br>
		<div class="team-wrap">
			<div class="i-block">Team 1</div>
			<br>
			<button class='js-addPlayer-btn'>+ Player</button>
