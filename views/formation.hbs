<div class="background-color" id="accordion-padding"></div>
<div class="accordion">
	<div class="col-6">
		<div class="accordion-header">Team 1</div>
		<div class="accordion-content bottom-border">
			<table>
				<tr>
					<th class="th-dark">Team</th>
					<th class="th-dark">Player</th>
					<th class="th-dark">Remove Player</th>
				</tr>
				{{#each dotArray}}
					<tr data-player-id="{{this.id}}" contentEditable="true">
						<td data-team="{{this.team}}">{{this.team}}</td>
						<td data-player="{{this.player}}">{{this.player}}</td>
						<td contentEditable="false" class="center"><button id='js-remove-player'>Delete</button></td>
					<tr>
				{{/each}}
			</table>
		</div>
	</div>
	<div class="col-6">
		<div class="accordion-header">Team 2</div>
		<div class="accordion-content">
			<table>
				<tr>
					<th class="th-dark">Team</th>
					<th class="th-dark">Player</th>
					<th class="th-dark">Remove Player</th>
				</tr>
				{{#each dotArray}}
					<tr data-player-id="{{this.id}}" contentEditable="true">
						<td data-team="{{this.team}}">{{this.team}}</td>
						<td data-player="{{this.player}}">{{this.player}}</td>
						<td contentEditable="false" class="center"><button id='js-remove-player'>Delete</button></td>
					<tr>
				{{/each}}
			</table>
		</div>
	</div>
</div>
